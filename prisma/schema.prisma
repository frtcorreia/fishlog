datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Role {
  id          Int    @id @default(autoincrement())
  description String @unique
  users       User[]
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  photo     String?
  status    Boolean
  roleId    Int
  role      Role      @relation(fields: [roleId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Capture   Capture[]
}

model Capture {
  id          Int       @id @default(autoincrement())
  weight      Float?
  size        Float?
  photo       String?
  date        String?
  time        String?
  location    Location? @relation(fields: [locationId], references: [id])
  locationId  Int
  weatherData Weather?  @relation(fields: [weatherId], references: [id])
  weatherId   Int
  waterData   Water?    @relation(fields: [waterId], references: [id])
  waterId     Int
  baitData    Bait?     @relation(fields: [baitId], references: [id])
  baitId      Int
  user        User?     @relation(fields: [userId], references: [id])
  userId      Int
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Location {
  id        Int       @id @default(autoincrement())
  latitude  Float
  longitude Float
  photo     String?
  captures  Capture[]
}

model Weather {
  id          Int       @id @default(autoincrement())
  pressure    Float?
  temperature Float?
  skyCoverage String?
  captures    Capture[]
}

model Water {
  id         Int       @id @default(autoincrement())
  visibility Float?
  color      String?
  captures   Capture[]
}

model Bait {
  id        Int       @id @default(autoincrement())
  bait      String?
  rod       String?
  technique String?
  captures  Capture[]
}
